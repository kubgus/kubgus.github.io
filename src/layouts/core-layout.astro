---
import { SEO } from 'astro-seo';

const {
    title = "Jakub Gustafik",
    description = "Student & software developer based in Slovakia",
    image = "/images/linkedin-portrait-v2.jpg",
    canonical = `https://gustafik.com` + Astro.url.pathname,
    og_title = title,
    og_type = "website",
    frontmatter = null,
} = Astro.props;

let open_graph = {
    basic: {
        title: og_title,
        type: og_type,
        image: image,
        url: canonical,
    },
    optional: {
        description: description,
    },
    image: {
        url: image,
        alt: frontmatter?.image?.alt ?? "",
        type: "image/jpeg",
    },
};

if (frontmatter != null) {
    Object.assign(open_graph, { article: {
        publishedTime: frontmatter.date,
        authors: [ frontmatter.author ],
        tags: frontmatter.tags ?? [],
    }});
}
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />

        <SEO
            title={title}
            description={description}
            canonical={canonical}
            openGraph={{
                basic: {
                    title: og_title,
                    type: og_type,
                    image: image,
                    url: canonical,
                },
                optional: {
                    description: description,
                },
                image: {
                    url: image,
                    type: "image/jpeg",
                },
            }}
            twitter={{
                description: description,
                card: "summary",
                site: "@gustafik_dev",
                creator: "@gustafik_dev",
            }}
        />

        <link rel="icon" type="image/png" href="/favicon.png" />
    </head>
    <body>
        <slot />

        <footer>
