---
import BaseLayout from "./base-layout.astro";

const { frontmatter } = Astro.props;
---

<style>
article {
    @apply flex flex-col gap-12 bg-brand-black px-[20vw] py-12
}
</style>

<style is:global>
pre {
    background-color: #151520 !important;
    @apply p-3 rounded-lg
}
</style>

<BaseLayout>
    <header class="flex flex-row justify-between px-6 py-3 bg-brand-gray font-dela-gothic-one text-lg">
        <nav class="flex flex-row">
            <a href="/blog">← Go back</a>
        </nav>
        <a href="/">
            <h6>JG</h6>
        </a>
    </header>
    <article>
        <img src={frontmatter.image.url} alt={frontmatter.image.alt} class="w-[100%] h-[30vh] object-cover rounded-lg" />
        <div id="info" class="flex flex-col gap-6 mb-6">
            <h1 class="text-[5.5rem]">{frontmatter.title}</h1>
            <p class="text-2xl">{frontmatter.description}</p>
            <span id="date">{frontmatter.author} • {new Date(frontmatter.pubDate).toDateString()}</span>
        </div>
        <slot />
    </article>
</BaseLayout>
