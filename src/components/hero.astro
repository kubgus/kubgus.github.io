---
import ContactBar from "./contact-bar.astro";
import PortraitContainer from "./portrait-container.astro";
---

<figure id="hero" class="container">
    <PortraitContainer />
    <div id="hero-text-container">
        <h1>Jakub Gustafik</h1>
        <span>Student & software developer based in Slovakia</span>
        <ContactBar />
    </div>
</figure>

<style>
#hero {
    display: flex;
    align-items: center;
    flex-direction: row;
    gap: 3rem;
    padding: 2rem 3rem;
}

#hero-text-container {
    display: flex;
    flex-direction: column;
}

@media (max-width: 1000px) {
    #hero {
        gap: 2rem;
        padding: 1rem 1.5rem;
    }
}

@media (max-width: 500px) {
    #hero {
        flex-direction: column;
        border: none;
    }

    #hero-text-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }
}

#hero h1 {
    font-size: 2.25rem;
    font-weight: 600;
}

#hero span {
    font-size: 1.25rem;
    color: var(--secondary-background-dark);
    margin-bottom: 0.6rem;
}
</style>
