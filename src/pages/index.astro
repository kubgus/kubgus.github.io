---
import RetractingNavbarLayout from "../layouts/retracting-navbar.astro";
import ContactBar from "../components/contact-bar.astro";
import ContentCard from "../components/content-card.astro";

const title = "Jakub Gustafik";
---

<style>
main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 2.5rem;

    padding: 6rem 13vw;
}

@media (max-width: 768px) {
    main {
        padding: 6rem 5vw;
        text-align: center;
    }
}

@media (max-width: 480px) {
    main {
        padding: 6rem 3vw;
    }
}

#hero {
    display: flex;
    flex-direction: row;
    gap: 6rem;
    justify-content: space-between;
}

@media (max-width: 768px) {
    #hero {
        flex-direction: column-reverse;
        align-items: center;
        gap: 1.5rem;
    }
}

#hero h1 {
    font-size: 3rem;
    font-weight: 600;
}

#hero p {
    font-size: 1.25rem;
    color: var(--secondary-background-dark);
}

#link-bar {
    display: flex;
    justify-content: space-between;
    gap: 1rem;

    padding: 1rem 1rem 1rem 0;
}

#link-bar-buttons {
    display: flex;
    gap: 0.5rem;
}

#link-bar-contact {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

@media (max-width: 1200px) {
    #link-bar {
        flex-direction: column-reverse;
    }
}

@media (max-width: 768px) {
    #link-bar {
        justify-content: center;
        align-items: center;
    }
}

#portrait-container {
    display: flex;
    justify-content: center;
    align-items: start;

    padding-top: 2rem;
}

#portrait {
    width: clamp(150px, 20vw, 200px);

    border: 3px solid var(--primary-accent-dark);
    border-radius: 50%;
}

#wall-of-fame {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
}

@media (max-width: 1100px) {
    #wall-of-fame {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 768px) {
    #wall-of-fame {
        grid-template-columns: repeat(1, 1fr);
    }
}
</style>

<style is:global>
#wall-of-fame > *:nth-child(4n+1),
#wall-of-fame > *:nth-child(4n+4) {
    grid-column: span 2;
}

@media (max-width: 1100px) {
    #wall-of-fame > *:nth-child(4n+1),
    #wall-of-fame > *:nth-child(4n+4) {
        grid-column: span 1; }
}

@media (max-width: 768px) {
    #wall-of-fame > *:nth-child(4n+1),
    #wall-of-fame > *:nth-child(4n+4) {
        grid-column: span 1; }
}
</style>

<RetractingNavbarLayout title={title}>
    <main>
        <figure id="hero">
            <div id="hero-text-container">
                <h1>{title}</h1>
                <p>I am a student from Slovakia also working as a freelancer.
                I picked up coding when I was quite young
                and I've been passionate about it ever since. I'm currently
                interested in IT, software development, web development, and
                personal development. I am bilingual in English and Slovak and
                I am also learning German. If you're interested in working with
                me, feel free to contact me.</p>
                <div id="link-bar">
                    <div id="link-bar-buttons">
                        <a href="/blog" class="btn">Read my articles</a>
                        <a href="/projects" class="btn">See my projects</a>
                    </div>
                    <div id="link-bar-contact">
                        <ContactBar />
                    </div>
                </div>
            </div>
            <div id="portrait-container">
                <img src="/images/linkedin-portrait.jpg" alt="Portrait" id="portrait" />
            </div>
        </figure>
        <figure id="wall-of-fame">
            { Array(39).fill(0).map((_) =>
            <ContentCard>
                <h2>test</h2>
                <p>lorem ipsum dolor sit amet</p>
            </ContentCard>
            )}
        </figure>
    </main>
</RetractingNavbarLayout>
