---
import RetractingNavbarLayout from "../layouts/retracting-navbar.astro";
import Hero from "../components/hero.astro";
import Picker from "../components/picker.astro";

import AboutMe from "../components/content/about-me.astro";
import Projects from "../components/content/projects.astro";
import Blog from "../components/content/blog.astro";

import "../styles/default-padding.css";

const title = "Jakub Gustafik";
---

<RetractingNavbarLayout title={title}>
    <main>
        <Hero />
        <Picker />

        <section class="container">
            <article class="content" id="content-1">
                <AboutMe />
            </article>

            <article class="content" id="content-2">
                <Projects />
            </article>

            <article class="content" id="content-3">
                <Blog />
            </article>
        </section>

        <span id="license">Â©2024 Jakub Gustafik</span>
    </main>
</RetractingNavbarLayout>

<style>
    @media (max-width: 500px) {
        main {
            text-align: center;
        }
    }

    .container {
        padding: 2.3rem 3rem;
        text-align: left !important;
    }

    @media (max-width: 1000px) {
        .container {
            padding: 1rem 1.5rem;
        }
    }

    .content {
        display: none;
    }

    main:has(#tab-1.active) #content-1,
    main:has(#tab-2.active) #content-2,
    main:has(#tab-3.active) #content-3 {
        display: block;
    }

    #license {
        text-align: center;
        color: var(--secondary-background-dark);
    }
</style>

<style is:global>
    .content > div {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        font-size: 1.2rem;
    }

    .content > div > * {
        opacity: 0;
        scale: 0.9;
        animation: fade-in ease-out 0.2s forwards;
    }

    @keyframes fade-in {
        to { scale: 1; opacity: 1; }
    }

    .content h1 {
        font-size: 1.85rem;
    }

    .content h1:not(:first-child) {
        margin-top: 1rem;
    }

    .content h2 {
        font-size: 1.5rem;
    }

    .content ul,
    .content ol {
        margin: 0;
    }

    .content li {
        margin-left: 1.25rem;
    }
</style>
