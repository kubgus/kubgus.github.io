---
import CoreLayout from "../layouts/core-layout.astro";

import ContactBar from "../components/contact-bar.astro";
import Navbar from "../components/navbar.astro";

import AboutMe from "../components/content/about-me.astro";
import Projects from "../components/content/projects.vue";
import Blog from "../components/content/blog.astro";

import "../styles/default-padding.css";

import projects from "../data/projects.js";

const tab_query = Astro.url.searchParams.get("tab");
let tab, translateSelector;
switch (tab_query) {
    case "projects":
        tab = "tab-2";
        translateSelector = "100%";
        break;
    case "blog":
        tab = "tab-3";
        translateSelector = "200%";
        break;
    default:
        tab = "tab-1";
        translateSelector = "0%";
        break;
}
console.log(translateSelector);
---

<CoreLayout>
    <Navbar />

    <header class="container" aria-hidden="true">
        <img src="/images/linkedin-portrait.jpg" alt="" id="portrait"/>
        <figure>
            <h1>Jakub Gustafik</h1>
            <span class="faded">Student & software developer based in Slovakia</span>
            <ContactBar />
        </figure>
    </header>

    <nav id="picker" class="container">
        <div class="content-selector-container">
            <a href="/" class={tab === "tab-1" ? "content-selector active" : "content-selector"} id="about-me">About me</a>
            <a href="/?tab=projects" class={tab === "tab-2" ? "content-selector active" : "content-selector"} id="projects">Projects</a>
            <a href="/?tab=blog" class={tab === "tab-3" ? "content-selector active" : "content-selector"} id="blog">Blog</a>
        </div>
        <div aria-hidden="true" class="select-indicator" />
    </nav>

    <main class="container">
        <article class="content" id="content-1">
            <AboutMe />
        </article>

        <article class="content" id="content-2">
            <Projects client:only="vue" projects={projects} />
            <h1 class="js-remove">Please enable JavaScript to view this page!</h1>
        </article>

        <article class="content" id="content-3">
            <Blog />
        </article>
    </main>

    <footer>
        <span id="license">Â©2024 Jakub Gustafik</span>
    </footer>
</CoreLayout>

<script>
    const buttons = document.getElementsByClassName("content-selector");
    // I hate Typescript
    const selector = Array.from(document.getElementsByClassName("select-indicator") as HTMLCollectionOf<HTMLElement>)[0];

    document.querySelectorAll(".js-remove").forEach((e) => e.remove());

    function setQuery(key: string, value: string) {
        const url = new URL(window.location.href);
        const params = new URLSearchParams(url.search);
        if (value.length > 0) {
            params.set(key, value);
        } else {
            params.delete(key);
        }
        url.search = params.toString();
        window.history.pushState({}, "", url);
    }

    for (let i = 0; i < buttons.length; i++) {
        const button = buttons[i];
        button.addEventListener("click", (e) => {
            e.preventDefault();
            setQuery("tab", button.id == "about-me" ? "" : button.id);
            selector.style.transform = `translateX(${i * 100}%`;
            for (let j = 0; j < buttons.length; j++) {
                buttons[j].classList.remove("active");
            }
            button.classList.add("active");
        });
    }
</script>

<style define:vars={{ translateSelector }}>
    header {
        display: flex;
        align-items: center;
        flex-direction: row;
        gap: 3rem;

        padding: 2rem 3rem;
    }

    header > img {
        width: clamp(120px, 15vw, 140px);
        height: clamp(120px, 15vw, 140px);

        background-color: var(--secondary-background-dark);

        border: 4px solid var(--primary-accent-dark);
        border-radius: 50%;
    }

    header > figure {
        display: flex;
        flex-direction: column;
    }

    header > figure h1 {
        font-size: 2.25rem;
        font-weight: 600;
    }

    header > figure span {
        font-size: 1.25rem;
        margin-bottom: 0.6rem;
    }

    @media (max-width: 1000px) {
        header {
            gap: 2rem;
            padding: 1rem 1.5rem;
        }
    }

    @media (max-width: 500px) {
        header {
            flex-direction: column;
            border: none;
        }

        header figure {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }
    }

    #picker {
        position: relative;
    }

    #picker .content-selector-container {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
    }

    #picker .content-selector {
        background-color: transparent;
        padding: 0.5rem;
        font-size: 1.01rem;
        font-weight: 500;
        text-align: center;
        width: 100%;
        z-index: 1;
        text-decoration: none;
    }

    #picker .content-selector:hover {
        color: inherit;
    }

    #picker .select-indicator {
        position: absolute;
        width: 33.333%;
        height: 100%;
        background-color: var(--secondary-background-dark);
        border-radius: 12px;
        transition: all 0.15s ease-out;
        top: 0;
        left: 0;
        z-index: 0;
        transform: translateX(var(--translateSelector));
    }

    article {
        padding: 2.3rem 3rem;
        text-align: left !important;
    }

    @media (max-width: 1000px) {
        article {
            padding: 1rem 1.5rem;
        }
    }

    footer {
        text-align: center;
        color: var(--secondary-background-dark);
    }
</style>

<style is:global>
    @media (max-width: 500px) {
        body {
            text-align: center;
        }
    }

    body:has(#about-me.active) #content-1,
    body:has(#projects.active) #content-2,
    body:has(#blog.active) #content-3 {
        display: block;
    }

    .content {
        display: none;
    }

    .content-inner {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        font-size: 1.2rem;
    }

    .content-inner > * {
        opacity: 0;
        scale: 0.9;
        animation: fade-in ease-out 0.2s forwards;
    }

    @keyframes fade-in {
        to { scale: 1; opacity: 1; }
    }

    .content h1 {
        font-size: 1.85rem;
    }

    .content h1:not(:first-child) {
        margin-top: 1rem;
    }

    .content h2 {
        font-size: 1.5rem;
    }

    .content ul,
    .content ol {
        margin: 0;
    }

    .content li {
        margin-left: 1.25rem;
    }
</style>
